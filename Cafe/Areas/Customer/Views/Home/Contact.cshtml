@model Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Title Page -->
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/Site/images/bg-title-page-02.jpg);">
    <h2 class="tit6 t-center">
        İLETİŞİM
    </h2>
</section>



<!-- Contact form -->
<section class="section-contact bg1-pattern p-t-90 p-b-113">
    <!-- Map -->
    <div class="container">
        <div class="map bo8 bo-rad-10 of-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99916.9841242!2d27.044585261178536!3d38.50135197993304!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14bbd6118e58a90d%3A0x73d8c794b58655c2!2zS2FyxZ_EsXlha2EvxLB6bWly!5e0!3m2!1sen!2str!4v1691847470259!5m2!1sen!2str" width="1150" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <div class="container">
        <h3 class="tit7 t-center p-b-62 p-t-105">
            BİZE MESAJ GÖNDERİN
        </h3>

        <form asp-action="Contact" class="wrap-form-reservation size22 m-l-r-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <!-- Name -->
                    <span class="txt9">
                        Adı
                    </span>

                    <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input asp-for="Name" class="bo-rad-10 sizefull txt10 p-l-20" type="text" placeholder="İsim">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Email -->
                    <span class="txt9">
                        Email
                    </span>

                    <div class="wrap-inputemail size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input asp-for="Email" class="bo-rad-10 sizefull txt10 p-l-20" type="text" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Phone -->
                    <span class="txt9">
                        Telefon
                    </span>

                    <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input asp-for="Telefon" class="bo-rad-10 sizefull txt10 p-l-20" type="text" placeholder="Telefon">
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <!-- Message -->
                    <span class="txt9">
                        Mesaj
                    </span>
                    <textarea asp-for="Mesaj" class="bo-rad-10 size35 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-3" placeholder="Mesaj"></textarea>
                    <span asp-validation-for="Mesaj" class="text-danger"></span>
                </div>
            </div>

            <div class="wrap-btn-booking flex-c-m m-t-13">
                <!-- Button3 -->
                <button type="submit" class="btn3 flex-c-m size36 txt11 trans-0-4">
                    Gönder
                </button>
            </div>
        </form>

    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}