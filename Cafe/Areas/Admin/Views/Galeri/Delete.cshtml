@model Cafe.Models.Galeri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Bu Kaydı Silmek İstediğinizden Emin Misiniz?</h3>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Image)*@
